{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "plugins": [
      "@nestjs/swagger"
    ],
    "deleteOutDir": true,
    "assets": [
      {
        "include": "common/homepage/static/*",
        "watchAssets": true,
        "outDir": "dist"
      },
      {
        "include": "uploads/*"
      },
      {
        "include": "**/*.hbs",
        "watchAssets": true
      }
    ]
  }
}
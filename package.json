{
  "name": "pai-boilerplate",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": false,
  "license": "UNLICENSED",
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "docker:up": "docker-compose -f docker-compose.yml up -d --build",
    "docker:down": "docker-compose down -v",
    "deploy:prod": "cross-env NODE_ENV=production npm run build && pm2 start ecosystem.config.js --only prod",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "migrate": "npx prisma migrate dev --preview-feature",
    "migrate:deploy": "npx prisma generate && npx prisma migrate deploy ",
    "migrate:seed": "npx prisma migrate dev --preview-feature && npx ts-node prisma/seed.ts",
    "prisma:module": "chmod +x scripts/prisma.sh && ./scripts/prisma.sh",
    "docs": "npx prisma generate && awk 'NR==FNR && FNR<=3 {print; next} FNR>3' project.dbml prisma/dbml/schema.dbml > docs.dbml && dbdocs build docs.dbml",
    "docs:clean": "npm run docs && rm -rf docs.dbml && rm -rf prisma/dbml"
  },
  "dependencies": {
    "@bull-board/api": "^5.6.0",
    "@bull-board/express": "^5.6.0",
    "@faker-js/faker": "^8.0.2",
    "@micro-nest/prisma-nest-dto": "^1.0.0",
    "@micro-nest/rest": "^1.0.5",
    "@nestjs/bull": "^10.0.1",
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/event-emitter": "^2.0.0",
    "@nestjs/jwt": "^10.1.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/passport": "^10.0.0",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/terminus": "^9.2.2",
    "@nestjs/throttler": "^4.1.0",
    "@prisma/client": "^5.1.1",
    "@sendinblue/client": "^3.3.1",
    "@types/passport": "^1.0.12",
    "bcryptjs": "^2.4.3",
    "bull": "^4.10.4",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cross-env": "^7.0.3",
    "express-basic-auth": "^1.2.1",
    "express-fileupload": "^1.4.0",
    "google-auth-library": "^9.0.0",
    "hbs": "^4.2.0",
    "ioredis": "^5.3.2",
    "lodash": "^4.17.21",
    "mkdirp": "^3.0.1",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.11.0",
    "prisma-erd-generator": "^1.11.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.2.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.13",
    "@types/lodash": "^4.14.195",
    "@types/multer": "^1.4.7",
    "@types/multer-s3": "^3.0.0",
    "@types/node": "^20.9.2",
    "@types/passport-jwt": "^3.0.8",
    "@types/passport-local": "^1.0.35",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.3.2",
    "prisma": "^5.1.1",
    "prisma-dbml-generator": "^0.10.0",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "^4.9.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}